---
import Brand from "./Brand.astro";
import data from "../../data/sitedata";
---

<Brand />
<nav class="Navi">
	{
		data.menuItems.map((item) => (
			<a href={item.link} class="Navi-item">
				{item.label}
			</a>
		))
	}
</nav>
<style lang="scss">
	.Navi {
		display: flex;

		&-item {
			color: white;
			text-decoration: none;
			font-weight: 800;
			padding: 1rem;
			transition: all 0.2s ease;

			&:hover {
				background-color: var(--red);
			}
		}
	}
</style>
